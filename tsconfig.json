{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["DOM", "ES2021"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node"],
    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
